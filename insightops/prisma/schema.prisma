// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// Shop settings and configuration
model Shop {
  id              String    @id @default(uuid())
  shopifyDomain   String    @unique // e.g., "mystore.myshopify.com"
  plan            String    @default("free") // "free" | "pro"
  alertEmail      String?   // Email for daily digest
  trackPrices     Boolean   @default(true)
  trackVisibility Boolean   @default(true)
  trackInventory  Boolean   @default(true)
  trackThemes     Boolean   @default(false) // Pro only
  installedAt     DateTime  @default(now())
  uninstalledAt   DateTime?
}

// Change events for alerting (core of StoreGuard)
model ChangeEvent {
  id           String    @id @default(uuid())
  shop         String    // Store URL
  entityType   String    // "product" | "variant" | "theme"
  entityId     String    // Shopify ID of the entity
  eventType    String    // "price_change" | "visibility_change" | "inventory_zero" | "theme_publish"
  resourceName String    // Product/Theme title for display (human-readable)
  beforeValue  String?   // Previous value (JSON or simple string)
  afterValue   String?   // New value (JSON or simple string)
  detectedAt   DateTime  @default(now())
  digestedAt   DateTime? // When included in daily digest (null = not yet sent)
  source       String    @default("webhook") // "webhook" | "sync_job" | "manual"
  importance   String    @default("medium") // "high" | "medium" | "low"
  groupId      String?   // For grouping related changes (e.g. bulk edit session)
  webhookId    String    @unique // Deduplication

  @@index([shop])
  @@index([shop, detectedAt])
  @@index([shop, eventType])
  @@index([digestedAt])
  @@index([shop, entityType, entityId])
}

// Product state snapshot for change detection
model ProductSnapshot {
  id        String   @id // Shopify product ID
  shop      String
  title     String
  status    String   // "active" | "draft" | "archived"
  variants  String   // JSON: [{id, title, price, inventoryQuantity}]
  updatedAt DateTime @updatedAt

  @@unique([shop, id])
  @@index([shop])
}

model EventLog {
  id          String   @id @default(uuid())
  shop        String   // The store URL
  shopifyId   String   // The Resource ID (e.g., Product ID)
  topic       String   // e.g., "products/update"
  author      String?  // The "Blame" retrieved via Events API
  message     String   // Description of change
  diff        String?  // JSON string: { old: value, new: value }
  timestamp   DateTime @default(now())
  webhookId   String?  @unique // Shopify webhook delivery ID for deduplication

  @@index([shop])
  @@index([shop, timestamp])
  @@index([shop, shopifyId, topic])
}

// Lightweight product cache for resolving names on delete
model ProductCache {
  id        String   @id // Shopify product ID as string
  shop      String
  title     String
  updatedAt DateTime @updatedAt

  @@unique([shop, id])
  @@index([shop])
}

// Background job queue for webhook processing
// This allows us to ACK webhooks immediately and process asynchronously
model WebhookJob {
  id          String   @id @default(uuid())
  shop        String
  topic       String   // e.g., "products/update"
  resourceId  String   // The Shopify resource ID
  payload     String   // JSON stringified payload
  webhookId   String?  @unique // For deduplication
  status      String   @default("pending") // pending, processing, completed, failed
  attempts    Int      @default(0)
  createdAt   DateTime @default(now())
  processAt   DateTime @default(now()) // When to process (for delayed jobs)
  completedAt DateTime?
  error       String?

  @@index([status, processAt])
  @@index([shop])
}

// Shop sync status - tracks initial product sync progress
model ShopSync {
  shop        String   @id
  status      String   @default("pending") // pending, syncing, completed, failed
  totalProducts Int?
  syncedProducts Int   @default(0)
  startedAt   DateTime?
  completedAt DateTime?
  error       String?
}

// Aggregated product sales metrics (NO customer PII)
// Stores revenue + units per product for a time bucket (hour/day).
model ProductSalesPoint {
  id          String   @id @default(uuid())
  shop        String   // The store URL
  productId   String   // Shopify product ID as string
  bucketType  String   // "hour" | "day"
  bucketStart DateTime // Start of bucket (UTC)
  revenueCents Int     @default(0) // Store as cents to avoid float drift
  units       Int     @default(0)
  currency    String? // Optional - store currency code if available
  updatedAt   DateTime @updatedAt

  @@unique([shop, productId, bucketType, bucketStart])
  @@index([shop, bucketType, bucketStart])
  @@index([shop, productId, bucketType, bucketStart])
}
